{% extends 'base.html.twig' %}

{% block body %}
	<h1>Détails du trajet à pourvoir :</h1>
	<h3 class="media-heading">
		<strong>{{ trajet.lieuDepart }}</strong>
		-
		<strong>{{ trajet.lieuArrive }}
		</strong>
		<div class="media" style="margin-top: 60px;">
			<div class="media-body">
				<div class="row">
					<div class="col-sm-2">
						<i class="pull-right">Publié le
							{{ trajet.dateCreation|date('m/d/Y') }}</i>
					</div>

				</div>

				<p>{{ trajet.description|nl2br }}</p>
				<p>
					<strong>Publié par :</strong>
					{{ trajet.conducteur.nom }}
					{{ trajet.conducteur.prenom }}
				</p>

				<p>
					<strong>Email de contact :</strong>
					{{ trajet.conducteur.email }}
				</p>
				<p>
					<strong>Date de départ :</strong>
					{{ trajet.dateDepart.format('Y-m-d H:i:s')}}
				</p>
				<p>
					<strong>Arrivée prévu :</strong>
					{{ trajet.dateArrive.format('Y-m-d H:i:s')}}
				</p>
				<p> 
					<strong>Covoitureur(s):
						<strong></p>

						<div class="row">
							<div class="col-sm-8 text-right">
								<a class="btn btn-default" href="{{ path('trajet.list')}}">
									<span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
									Retour
								</a>

								<a class="btn btn-primary" href="{{ path('reservation.trajet')}}">
									<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
									Réserver
								</a>
								{% if app.user is not null %}
									{% if app.user.id == trajet.conducteur.id %}
										<a href="{{ path('mes.trajets.edit', {id: trajet.id}) }}" class="btn btn-info ">
											<i class="fas fa-edit"></i>
											Modifier</a>
										<a href="{{ path('mes.trajets.delete', {id: trajet.id}) }}" class="btn btn-danger">
											<i class="fas fa-trash"></i>
											Supprimer</a>
									{% endif %}
								{% endif %}

							</div>
						</div>
					</p>
				</p>
			</div>

		</div>

	{% endblock %}
